import matplotlib.pyplot as plt
from control.matlab import *
import control as ctr


TimeLine = []
for i in range(0,3000):
    TimeLine.append(i)

def n_w(num, den):
    w = tf(num, den)
    return w


bz_z = n_w(num=[3], den=[1])
print('Передаточная функция Безынерционного звена: \n %s' % bz_z)
y, x = ctr.step_response(bz_z,TimeLine)
plt.plot(x, y, "b")
plt.title('Переходная функция Безынерционного звена')
plt.ylabel('Амплитудное значение')
plt.xlabel('Время')
plt.grid(True)
plt.show()
y, x = ctr.impulse_response(bz_z,TimeLine)
plt.plot(x, y, "r")
plt.title('Импульсная функция Безынерционное звено')
plt.ylabel('Амплитудное значение')
plt.xlabel('Время')
plt.grid(True)
plt.show()
mag, phase, omega = bode(bz_z, dB=True)
plt.title('ЛАЧХ и ЛАФЧХ апериодического звена')
plt.plot()
plt.show()

ap_z = n_w(num=5, den=[3, 1])
print('Передаточная функция апериодического звена: \n %s' % ap_z)
y, x = step(ap_z)
plt.plot(x, y, "b")
plt.title('Переходная функция апериодического звена')
plt.ylabel('Амплитудное значение')
plt.xlabel('Время')
plt.grid(True)
plt.show()
y, x = impulse(ap_z)
plt.plot(x, y, "r")
plt.title('Импульсная функция апериодического звена')
plt.ylabel('Амплитудное значение')
plt.xlabel('Время')
plt.grid(True)
plt.show()
mag, phase, omega = bode(ap_z, dB=True)
plt.title('ЛАЧХ и ЛАФЧХ апериодического звена')
plt.plot()
plt.show()

