plt.show()
mag, phase, omega = bode(in_z, dB=True)
plt.title('ЛАЧХ и ЛАФЧХ интегрирующего звена')
plt.plot()
plt.show()

rD_z = n_w(num=[1, 0], den=[4, 1])
print('Передаточная функция реального дифференциирующего звена: \n %s' % rD_z)
y, x = step(rD_z)
plt.plot(x, y, "b")
